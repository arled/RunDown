{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "types": [],
    "module": "commonjs",
    "baseUrl": ".",
    "importHelpers": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": false,
    "jsx": "react-native",
    "lib": ["es2017", "dom"],
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "paths": {
      "@rundown-root/*": ["./src/*"],
      "@rundown-screens/*": ["./src/screens/*"],
      "@rundown-components/*": ["./src/components/*"],
      "@rundown-routes/*": ["./src/routes/*"],
      "@rundown-store/*": ["./src/store/*"]
    }
  },
  "include": ["./src/**/*", "./App.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
